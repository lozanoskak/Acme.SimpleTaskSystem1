@using Acme.SimpleTaskSystem.Web.Models.People

@model CreateTaskViewModel

@section scripts{
    <environment names="Develpment">
        <script src="~/js/views/tasks/create.js"></script>"
    </environment>
    <environment names="Staging, Production">
        <script src="~/js/views/tasks/create.js"></script>
    </environment>
}

<h2>
    @L("NewTask")
</h2>
<form id="TaskCreateForm" method="post">

<div class="form-group">
    <label for="Title">@L("Title")</label>
    <input type="text" name="Title" class="form-control" placeholder="@L("Title")" required maxlength="@Acme.SimpleTaskSystem.Tasks.Task.MaxTitleLength" />
</div>
    <div class="form-group">
        <label for="Description">@L("Description")</label>
        <input type="text" name="Description" class="form-control" placeholder="@L("Description")" required maxlength="@Acme.SimpleTaskSystem.Tasks.Task.MaxDescriptionLength" />
    </div>

<div class="form-group">
    @Html.Label(L("AssignedPerson"))
    @Html.DropDownList(
    "AssignedPersonId",
    Model.People,
    new{
        @class="form-control",
        id="AssignedPersonCombobox"
    })
</div>

<button asp-controller="Tasks" asp-action="Create1" type="submit"  class="btn btn-default">@L("Save")</button>

</form>