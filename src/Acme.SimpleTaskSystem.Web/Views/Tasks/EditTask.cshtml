@using Acme.SimpleTaskSystem.Web.Models.Tasks

@model EditTaskViewModel

<h2>
    @L("EditTask")
</h2>
<form id="EditTaskForm" method="post">

    <div class="form-group">
        <label for="Title">@L("Title")</label>
        <input type="text" name="Title" id="Title"class="form-control" value="@Model.Title" />
    </div>
    <div class="form-group">
        <label for="Description">@L("Description")</label>
        <input type="text" name="Description" id="Description" class="form-control"  value="@Model.Description" />
    </div>


    <button asp-controller="Tasks" asp-action="Edit" asp-route-taskId="@Model.TaskId" type="submit" class="btn btn-default">@L("Save")</button>

</form>